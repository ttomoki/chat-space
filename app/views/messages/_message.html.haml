.messages{ "data-message-id": "#{message.id}" }
  %ul.massege
    %li.massege__name
      = message.user.name
    %li.massege__date
      = message.created_at.strftime("%Y-%m-%d %H:%M:%S")
  .message_field
    %h4
      - if message.body
        = message.body
      - if message.image
        = image_tag message.image
